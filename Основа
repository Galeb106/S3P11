#include <iostream>
#include <fstream>
#include <windows.h>
#include <conio.h>
 
using namespace std;
 
struct ГUniversity
{
    int no; //номер
    string name; //название
    string gldoc; //Ректор
    string coldoc; //кол-во преподавателей
    int decr; //кол-во в отпуске
    int money; //отпускные
};
 
void edit(int n, struct University* p)
{
 
    int i;
    cout << "n input N string for edit: ";
    cin >> i;
    cout << "no: ";
    cin >> p[i].no;
    cout << "name: "; 
    cin >> p[i].name;
    cout << "gldoc: ";
    cin >> p[i].gldoc;
    cout << "coldoc: ";
    cin >> p[i].coldoc;
    cout << "decr: ";
    cin >> p[i].decr;
    cout << "money: ";
    cin >> p[i].money;
}
 
void input(int n, struct Medicine* p)
{
    ifstream fin;
    fin.open("Eybdthcbntn.txt");
    for (int i = 0; i < n; i++) {
        fin >> p[i].no >> p[i].name >> p[i].gldoc >> p[i].coldoc >> p[i].decr >> p[i].money;
    }
    fin.close();
}
 
void output(int n, struct Medicine* p)
{
    cout << "Data output :" << endl;
    for (int i = 0; i < n; i++) {
        cout << p[i].no << p[i].name << p[i].gldoc << p[i].coldoc << p[i].decr << p[i].money << endl;
    }
}
void output_file(int n, struct University* p)
{
    ofstream fout;
    fout.open("f2.txt");
    for (int i = 0; i < n; i++) {
        fout << p[i].no << " " << p[i].name << " " << p[i].gldoc << " " << p[i].coldoc <<" "<< p[i].decr << " " << p[i].money << endl;
    }
    fout.close();
}
 
int calc(int n, struct University* p)
{
    int k = 0;
    for (int i = 0; i < n; i++)
    {
        k += p[i].decr;
    }
    return k;
}
 
int main()
 
{
    setlocale(LC_ALL, "rus");
    int n;
    cout << "n= ";
    cin >> n;
 
    University* university = new University[n];
    input(n, university);
     edit(n, university);
    output(n, university);
 
    output_file(n, university);
    calc(n, university);
    delete[] university;
 
    university = NULL;
 
    return 0;
}
